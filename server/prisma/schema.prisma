generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Condominio {
  id              Int      @id @default(autoincrement())
  razao_social    String
  logradouro      String
  numero_endereco String
  complemento     String
  bairro          String
  localidade      String
  uf              String
  cep             String
  telefone        String
  cnpj            String
  createdAt       DateTime @default(now())

  units Unidade[]
}

model Unidade {
  id        Int      @id @default(autoincrement())
  bloco     String
  unidade   String
  tipo      String
  createdAt DateTime @default(now())

  Condominio   Condominio @relation(fields: [condominioId], references: [id])
  condominioId Int

  users     User[]
  Encomenda Encomenda[]
}

enum UserRole {
  USER
  ADMIN
  OPERADOR
}

model User {
  id              Int      @id @default(autoincrement())
  nome            String
  cpf             String   @unique
  data_nascimento DateTime
  email           String   @unique
  primeiro_acesso String
  senha           String
  token           String   @unique
  cargo           UserRole @default(USER)
  createdAt       DateTime @default(now())

  Unidade   Unidade @relation(fields: [unidadeId], references: [id])
  unidadeId Int
}

model Encomenda {
  id                  Int      @id @default(autoincrement())
  invoice             String
  tracking_code       String
  date_time_entry     DateTime
  date_time_departure DateTime
  protocolo           String
  createdAt           DateTime @default(now())

  Unidade   Unidade @relation(fields: [unidadeId], references: [id])
  unidadeId Int
}
